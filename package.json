{
  "name": "crypto-dare",
  "version": "1.0.0",
  "description": "DARE combines a modern AE scheme with a simple reordering protection mechanism to build a tamper-resistant encryption scheme.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZhongFuze/crypto-dare.git"
  },
  "keywords": [
    "nodejs", "crypto", "encryption", "aes", "aead", "dare", "aes-gcm", "decryption", "async"
  ],
  "author": "Zella Zhong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ZhongFuze/crypto-dare/issues"
  },
  "homepage": "https://github.com/ZhongFuze/crypto-dare#readme",
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "scrypt-js": "^3.0.1"
  }
}
